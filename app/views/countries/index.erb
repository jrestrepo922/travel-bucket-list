<div class="topnav">
  <a href='/logout'>Log out</a>
  <a href="/countries/new">New Country/City</a>
  <a href="/cities">All my cities</a>
  <a href="/countries/explore">Explore new Destinations</a>
  
</div>

<h2>Travel Bucket List!</h2>



<div class="row">
  <% @countries.each do |country| %> 
    <div class="column">
        <div class="card">
           
           <h2><a href="/countries/<%=country[:id]%>"><%=country[:name] %></a></h2>
           <% country.cities.each do |city| %>
              <% if city.user_id == current_user.id %> 
                <h3><%= city.name%></h3> 
              <%end%>
           <%end%>
        </div>
    </div>
  <%end%>
</div>

